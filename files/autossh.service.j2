[Unit]
Description=AutoSSH tunnel service for remote control
After=network.target

[Service]
User=jumpy
Environment="AUTOSSH_GATETIME=0"
ExecStart=/usr/bin/autossh -M 0 -o "ServerAliveInterval 30" -o "ServerAliveCountMax 3" -NR 0:localhost:22 jumpy@{{ jumpbox_host }} -p 443 -i /home/jumpy/.ssh/id_ed25519
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
