[Unit]
Description=Initial configuration of the image
Before=getty@tty1.service getty@tty7.service lightdm.service
After=cups.service

[Service]
Type=oneshot
RemainAfterExit=yes
TimeoutSec=0
TTYReset=yes
TTYVHangup=yes
TTYPath=/dev/tty2
StandardInput=tty
StandardOutput=tty
ExecStart=/bin/chvt 2
ExecStart=/icpc/scripts/icpc_setup

[Install]
WantedBy=graphical.target
WantedBy=multi-user.target
